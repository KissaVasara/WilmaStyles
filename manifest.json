{
  "manifest_version": 2,
  "name": "WilmaStyles",
  "version": "1.0",
  "description": "Tyylik√§s teema Wilman sivustolle.",
  "icons": {
    "48": "icons/wilmastyles.png"
  },
  "permissions": [
    "webNavigation",
    "*://*.inschool.fi/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.inschool.fi/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "browser_style": true
  }
}